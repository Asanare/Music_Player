<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlists_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_no_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Playlists yet. Click the button to add one"
            android:visibility="invisible" />
    <ListView
        android:id="@+id/lv_playlists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:padding="0dp"
        android:visibility="visible" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_new_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Create new playlist"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/add" />


</RelativeLayout>
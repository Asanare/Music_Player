<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jmulla.musicplayer.CurrentSong">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/btn_play_pause"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forward"
        android:id="@+id/btn_fwd"
        android:layout_alignBottom="@+id/btn_play_pause"
        android:layout_toRightOf="@+id/btn_play_pause"
        android:layout_toEndOf="@+id/btn_play_pause"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backwards"
        android:id="@+id/btn_back"
        android:layout_alignBottom="@+id/btn_play_pause"
        android:layout_toLeftOf="@+id/btn_play_pause"
        android:layout_toStartOf="@+id/btn_play_pause"
        android:textColor="@color/colorPrimaryDark"/>
</RelativeLayout>
